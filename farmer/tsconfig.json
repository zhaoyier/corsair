{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"module": "esnext",
		"target": "es2018",
		"moduleResolution": "node",
		"jsx": "preserve",
		"removeComments": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"lib": [
			"esnext",
			"es2018",
			"es6",
			"dom",
			"dom.iterable",
			"scripthost",
			"es2016.array.include"
		],
		"allowJs": true
	},
	"include": [
		"./type-declarations/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/**/*.tsx",
		"./src/**/**/**/*.tsx"
	],
	"exclude": ["node_modules", "./dist", "./config"]
}
